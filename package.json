{
  "name": "wishlist",
  "private": true,
  "scripts": {
    "dev": "trap 'kill 0' EXIT; pnpm dev:worker & pnpm dev:web & wait",
    "dev:worker": "pnpm --filter @wishlist/worker dev",
    "dev:web": "pnpm --filter @wishlist/web dev",
    "build": "pnpm --filter @wishlist/core build && pnpm --filter @wishlist/web build && pnpm --filter @wishlist/worker build",
    "build:core": "pnpm --filter @wishlist/core build",
    "build:web": "pnpm --filter @wishlist/web build",
    "build:worker": "pnpm --filter @wishlist/worker build",
    "deploy": "pnpm --filter @wishlist/worker run deploy",
    "db:generate": "pnpm --filter @wishlist/core db:generate",
    "db:migrate:local": "pnpm --filter @wishlist/worker db:migrate:local",
    "db:migrate:remote": "pnpm --filter @wishlist/worker db:migrate:remote",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
