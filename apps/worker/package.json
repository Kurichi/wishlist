{
  "name": "@wishlist/worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "mkdir -p ../web/dist && wrangler dev",
    "build": "mkdir -p ../web/dist && wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate:local": "wrangler d1 migrations apply wishlist-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply wishlist-db --remote"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.2",
    "hono": "^4",
    "@hono/zod-validator": "^0.4",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.25.0",
    "@wishlist/core": "workspace:*",
    "drizzle-orm": "^0.39"
  },
  "devDependencies": {
    "wrangler": "^4.20.0",
    "typescript": "^5.7"
  }
}
