{
  "name": "@wishlist/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "NODE_OPTIONS='--max-old-space-size=8192' tsc --noEmit",
    "db:migrate:local": "wrangler d1 migrations apply wishlist-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply wishlist-db --remote"
  },
  "dependencies": {
    "hono": "^4",
    "@hono/zod-validator": "^0.4",
    "@wishlist/core": "workspace:*",
    "drizzle-orm": "^0.39"
  },
  "devDependencies": {
    "wrangler": "^4",
    "@cloudflare/workers-types": "^4",
    "typescript": "^5.7"
  }
}
